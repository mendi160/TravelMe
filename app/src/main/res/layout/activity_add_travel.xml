<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.AddTravelActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:hint="@string/your_phone_number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumber"
        android:ems="10"
        android:hint="@string/your_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/sourceAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="10dp"
        android:hint="@string/your_source_address" />

    <EditText
        android:id="@+id/destinationAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sourceAddress"
        android:hint="@string/your_destination_address" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/email"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/addPassengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destinationAddress"
        android:orientation="horizontal">

        <Button
            android:id="@+id/minusP"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="less"
            app:icon="@drawable/baseline_remove_black_18dp" />

        <EditText
            android:id="@+id/passengers"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="number of passengers"
            android:inputType="number" />

        <Button
            android:id="@+id/plusP"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="more"
            app:icon="@drawable/baseline_add_24" />
    </LinearLayout>

    <include
        android:id="@+id/departureDate"
        layout="@layout/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addPassengers" />

    <include
        android:id="@+id/returnDate"
        layout="@layout/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/departureDate" />
</RelativeLayout>