<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.AddTravelActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_name"
        android:inputType="textPersonName"
        />

    <EditText
        android:layout_below="@+id/name"
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_phone_number"
        android:inputType="phone"
        />
    <EditText
        android:layout_below="@id/phoneNumber"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/your_email"/>
    <EditText
        android:layout_below="@+id/divider"
        android:id="@+id/sourceAddress"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_source_address"
        />
    <EditTextj
        android:layout_below="@+id/sourceAddress"
        android:id="@+id/destinationAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_destination_address"
       />

    <View
        android:id="@+id/divider"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider" />


</RelativeLayout>